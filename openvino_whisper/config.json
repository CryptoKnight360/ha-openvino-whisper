{
  "name": "Wyoming OpenVINO Whisper",
  "version": "2.8.0",
  "slug": "openvino_whisper",
  "description": "Whisper Speech-to-Text accelerated by Intel OpenVINO. Uses Host Networking for stability.",
  "url": "https://github.com/CryptoKnight360/ha-openvino-whisper",
  "startup": "application",
  "arch": ["amd64"],
  "init": false,
  "map": ["config:rw"],
  "host_network": true,
  "devices": [
    "/dev/dri:/dev/dri"
  ],
  "privileged": [
    "SYS_ADMIN"
  ],
  "options": {
    "model": "openai/whisper-large-v3-turbo",
    "device": "GPU",
    "language": "en",
    "beam_size": 1
  },
  "schema": {
    "model": "list(openai/whisper-tiny|openai/whisper-base|openai/whisper-small|openai/whisper-medium|openai/whisper-large-v3|openai/whisper-large-v3-turbo|distil-whisper/distil-small.en|distil-whisper/distil-medium.en|distil-whisper/distil-large-v3)",
    "device": "list(GPU|CPU|AUTO)",
    "language": "str",
    "beam_size": "int"
  },
  "udev": true
}
